{
  "compilerOptions": {
    "target": "ES2020",                          
    "module": "CommonJS",                        
    "rootDir": "src",                            
    "outDir": "dist",                            
    "strict": true,                              
    "esModuleInterop": true,                     
    "skipLibCheck": true,                        
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src", "controllers", "middleware"],                           
  "exclude": ["node_modules", "dist"]
}